{% extends 'partials/base.html.twig' %}
{% block header_navigation %}{% endblock %}
{% block content %}
 <section id="contact">
    <div class="container">
        <div class="col-lg-12 text-center">
          {{ page.content }}
          {% set simplecontact = config.plugins.simplecontact %}
          {% if page.slug == 'send_success' %}
            <h2>Message Sent</h2>
            <h3>{{ simplecontact.messages.success}}</h3>
          {% endif %}
          {% if page.slug == 'send_error' %}
            <h2>Error</h2>
            <h3>{{ simplecontact.messages.error}}</h3>
          {% endif %}
          {% if page.slug == 'send_fail' %}
            <h2>Sending Failed</h2>
            <h3>{{ simplecontact.messages.fail}}</h3>
          {% endif %}  
          <a href="javascript: history.go(-1)">Go Back</a>
      </div>
  </div>
</section>  
{% endblock %}
