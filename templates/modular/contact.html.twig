<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                {{ content }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            {% for field in page.header.fields %}
                                <div class="form-group">
                                    <input type="{{ field.type }}" class="form-control" placeholder="{{ field.placeholder }}" id="{{ field.id }}" required data-validation-required-message="{{ field.message }}.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            {% endfor %}
                        </div>
                        {% for textarea in page.header.textareas %}
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="{{ textarea.placeholder }}" id="{{ textarea.id }}" required data-validation-required-message="{{ textarea.message }}"></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="clearfix"></div>
                        {% for button in page.header.buttons %}
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="{{ button.type }}" class="btn btn-xl">{{ button.text }}</button>
                            </div>
                        {% endfor %}
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
